{
	"name": "Pytorch with CUDA",
	"image": "anibali/pytorch:2.0.1-cuda11.8",
	"postCreateCommand": "pip install --upgrade pip && pip install -e . && sh evals/elsuite/ml_agent_bench/scripts/install_all_requirements.sh",
	"runArgs": [
		"--runtime=nvidia",
		"--gpus",
		"all"
	]
}
